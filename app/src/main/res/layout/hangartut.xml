<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/meadow"
    tools:context="com.frozensparks.royalindustry.MainActivity"
    android:id="@+id/fullscreen_content"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000">
    <Button
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:id="@+id/werkstatt"
        android:background="@drawable/hangarbtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView13"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:src="@mipmap/pfeil_pressed"
            android:layout_alignBottom="@+id/werkstatt"
            android:layout_toLeftOf="@+id/werkstatt"
            android:layout_toStartOf="@+id/werkstatt" />

        <TextView
            android:text="@string/hangartutext"
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_below="@+id/imageView13"
            android:layout_toStartOf="@+id/werkstatt"
            android:layout_toLeftOf="@+id/werkstatt"
            android:textAlignment="center" />

    </RelativeLayout>
</RelativeLayout>
