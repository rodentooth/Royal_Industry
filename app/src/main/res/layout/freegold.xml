<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView21"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:src="#000000"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <ScrollView

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/closefreedias"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //Fabrik1
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:id="@+id/textView8"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView18"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:src="@mipmap/gold"
                    android:layout_toRightOf="@+id/textView8" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView23"
                    android:layout_column="3"
                    android:src="@mipmap/fbico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="like frozensparks"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/closefreedias"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_toLeftOf="@+id/like_view"
                    android:layout_toRightOf="@+id/imageView18"
                    android:layout_toEndOf="@+id/imageView18"
                    android:layout_column="4" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like_view"
                    android:text="like!"
                    android:textAllCaps="false"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_alignRight="@+id/ratebtn"
                    android:layout_alignEnd="@+id/ratebtn"
                    android:layout_column="5" />
            </TableRow>

            //Fabrik2
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:id="@+id/textView9"
                    android:textColor="#ffffff"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView19"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:src="@mipmap/gold"
                    android:layout_toRightOf="@+id/textView9" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView24"
                    android:layout_column="3"
                    android:src="@mipmap/psico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 star rating"
                    android:id="@+id/textView7"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/imageView18"
                    android:layout_toRightOf="@+id/imageView20"
                    android:layout_toEndOf="@+id/imageView20"
                    android:textSize="20dp"
                    android:layout_column="4" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rate!"
                    android:id="@+id/ratebtn"
                    android:textAllCaps="false"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_toLeftOf="@+id/closefreedias"
                    android:layout_toStartOf="@+id/closefreedias"
                    android:layout_toRightOf="@+id/freediastitle"
                    android:layout_column="5" />
            </TableRow>


        </TableLayout>
    </ScrollView>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/closefreedias"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/closebtns" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/free_gold"
        android:id="@+id/freediastitle"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />


</RelativeLayout>



