<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/meadow"
    tools:context="com.frozensparks.royalindustry.MainActivity"
    android:id="@+id/fullscreen_content">



    <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/banklvl1"
                    android:id="@+id/Bank"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
        />
                    <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/factory_1"
                    android:id="@+id/Fabrik1"
                    android:textAllCaps="false"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/openagency"
        android:layout_alignTop="@+id/progressBarUpgradeAgency"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/agencylvl1" />

    <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:id="@+id/SammelnFabrik1"
                    android:textAllCaps="false"
                    android:layout_above="@+id/Fabrik1"
                    android:layout_alignRight="@+id/Fabrik1"
                    android:layout_alignEnd="@+id/Fabrik1" />
                 <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarUpgradefab1"
        android:layout_above="@+id/Fabrik1"
        android:layout_alignRight="@+id/Fabrik1"
        android:layout_alignEnd="@+id/Fabrik1"
        android:indeterminate="false" />



    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/factory_2"
        android:id="@+id/Fabrik2"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Bank"
        android:layout_toEndOf="@+id/Bank" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:id="@+id/SammelnFabrik2"
        android:textAllCaps="false"
        android:layout_above="@+id/Fabrik2"
        android:layout_alignRight="@+id/progressBarUpgradefab2"
        android:layout_alignEnd="@+id/progressBarUpgradefab2" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarUpgradefab2"
        android:layout_above="@+id/Fabrik2"
        android:layout_alignRight="@+id/Fabrik2"
        android:layout_alignEnd="@+id/Fabrik2"
        android:indeterminate="false" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/factory_3"
        android:id="@+id/Fabrik3"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/Bank"
        android:layout_toStartOf="@+id/Bank" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:id="@+id/SammelnFabrik3"
        android:textAllCaps="false"
        android:layout_above="@+id/Fabrik3"
        android:layout_alignRight="@+id/progressBarUpgradefab3"
        android:layout_alignEnd="@+id/progressBarUpgradefab3" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarUpgradefab3"
        android:layout_above="@+id/Fabrik3"
        android:layout_alignRight="@+id/Fabrik3"
        android:layout_alignEnd="@+id/Fabrik3"
        android:indeterminate="false" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/factory_4"
        android:id="@+id/Fabrik4"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:id="@+id/SammelnFabrik4"
        android:textAllCaps="false"
        android:layout_above="@+id/Fabrik4"
        android:layout_alignRight="@+id/progressBarUpgradefab4"
        android:layout_alignEnd="@+id/progressBarUpgradefab4" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarUpgradefab4"
        android:layout_above="@+id/Fabrik4"
        android:layout_alignRight="@+id/Fabrik4"
        android:layout_alignEnd="@+id/Fabrik4"
        android:indeterminate="false" />

                 <Button
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                     android:id="@+id/bauhaus"
                    android:textAllCaps="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                     android:background="@drawable/archbtns" />



    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarUpgradeBank"
        android:indeterminate="false"
        android:layout_below="@+id/Bank"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="werkstatt"
        android:id="@+id/werkstatt"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/progressBarUpgradefab1"
        android:layout_alignStart="@+id/progressBarUpgradefab1" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarUpgradeAgency"
        android:layout_alignTop="@+id/Bank"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false" />


</RelativeLayout>
