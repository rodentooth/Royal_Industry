<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/fullscreen_content"
    tools:context="com.frozensparks.royalindustry.BankActivity">



        <RelativeLayout
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GOLD"
                android:id="@+id/currentGoldBalance"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="42dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLOSE"
                android:id="@+id/closeBank"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="DIAS"
                android:id="@+id/diatext"
                android:layout_below="@+id/currentGoldBalance"
                android:layout_alignLeft="@+id/currentGoldBalance"
                android:layout_alignStart="@+id/currentGoldBalance"
                android:layout_marginTop="29dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="convert"
                android:id="@+id/GoldToDias"
                android:layout_alignTop="@+id/diatext"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


</FrameLayout>
